{
    "behave-vsc.xRay": true,
    "behave-vsc.envVarOverrides": {
        "var1": "ENV-var1",
        "var3": "ENV-var3",
    },
    "behave-vsc.runProfiles": {
        "stage2 profile": {
            "envVarOverrides": {
                "BEHAVE_STAGE": "stage2"
            },
        },
        "tag1 profile": {
            "tagExpression": "@tag1",
        },
        "tag1 vars profile": {
            "envVarOverrides": {
                "var1": "TAG1-var1",
                "var2": "TAG1-var2"
            },
            "tagExpression": "@tag1",
        },
        "tag2 vars profile": {
            "envVarOverrides": {
                "var1": "TAG2-var1",
                "var2": "TAG2-var2"
            },
            "tagExpression": "@tag2",
        },
        "tag1or2 vars profile": {
            "envVarOverrides": {
                "var1": "TAG1_OR_2-var1",
                "var2": "TAG1_OR_2-var2"
            },
            "tagExpression": "@tag1,@tag2",
        },
    },
    "mypy-type-checker.ignorePatterns": [
        ".*"
    ],
}