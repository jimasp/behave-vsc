{
    "behave-vsc.xRay": true,
    "behave-vsc.env": {
        "var1": "ENV-var1",
        "var3": "ENV-var3",
    },
    "behave-vsc.runProfiles": [
        {
            "name": "stage2 profile",
            "env": {
                "profile": "stage2_profile",
                "BEHAVE_STAGE": "stage2"
            },
        },
        {
            "name": "tag1 profile",
            "env": {
                "profile": "tag1_profile",
            },
            "tagExpression": "--tags=tag1",
        },
        {
            "name": "tag1 vars profile",
            "env": {
                "profile": "tag1_vars_profile",
                "var1": "TAG1-var1",
                "var2": "TAG1-var2"
            },
            "tagExpression": "--tags=tag1",
        },
        {
            "name": "tag2 vars profile",
            "env": {
                "profile": "tag2_vars_profile",
                "var1": "TAG2-var1",
                "var2": "TAG2-var2"
            },
            "tagExpression": "--tags=@tag2",
        },
        {
            "name": "tag1or2 vars profile",
            "env": {
                "profile": "tag1or2_vars_profile",
                "var1": "TAG1_OR_2-var1",
                "var2": "TAG1_OR_2-var2"
            },
            "tagExpression": "--tags=tag1,@tag2",
        },
        {
            "name": "qu'oted\"tag profile",
            "env": {
                "profile": "qu'oted\"tag_profile",
            },            
            "tagExpression": "--tags=@qu'oted\"tag",
        },
        {
            "name": "qu'oted\"env profile",
            "env": {
                "profile": "qu'oted\"env_profile",
                "qu'oted\"env": "v'al\"ue"
            },
        },             
    ],
    "mypy-type-checker.ignorePatterns": [
        ".*"
    ],
}