{
    "python.defaultInterpreterPath": ".venv/bin/python",
    "behave-vsc.xRay": true,
    "behave-vsc.behaveWorkingDirectory": "django/mysite",
    "behave-vsc.runProfiles": [
        // note - for multiroot, runProfiles will only be read from the workspace file 
        // (do not create conflicting profile names between projects)
        {
            "name": "behave-django runner profile - wait for results",
            "customRunner": {
                "scriptFile": "manage.py",
                "args": [
                    "--keepdb"
                ],
                "waitForJUnitFiles": true
            },
        },
        {
            "name": "behave-django runner profile - do not wait for results",
            "customRunner": {
                "scriptFile": "manage.py",
                "waitForJUnitFiles": false
            },
        },
    ],
    "mypy-type-checker.ignorePatterns": [
        ".*"
    ]
}