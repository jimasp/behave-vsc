{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug: MY workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/../my-project",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: simple workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: project A workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project A",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: project B workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project B",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: bad import workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/bad import",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Debug: multiroot workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
			],
			"outFiles": [
				"${workspaceFolder}/dist/**/*.js"
			],
			"skipFiles": [
				"<node_internals>/**",
				"**/app/out/vs/**"
			],
			"preLaunchTask": "${defaultBuildTask}",
		},
		{
			"name": "Run Test Suite: project A workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project A",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/project A suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: project B workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/project B",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/project B suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: simple workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/simple",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/simple suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
		{
			"name": "Run Test Suite: multiroot workspace",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"${workspaceFolder}/example-projects/multiroot.code-workspace",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--extensionTestsPath=${workspaceFolder}/out/test/multiroot suite/index"
			],
			"outFiles": [
				"${workspaceFolder}/out/**/*.js",
				"${workspaceFolder}/dist/**/*.js"
			],
			"preLaunchTask": "tasks: watch-tests",
		},
	]
}