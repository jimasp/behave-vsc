{
    "scopeName": "gherkin.grammar",
    "reference": "https://macromates.com/manual/en/language_grammars",
    "patterns": [
        {
            "match": "^\\s*#.*",
            "name": "comment.line"
        },
        {
            "begin": "^\\s*(\"\"\")",
            "end": "^\\s*(\"\"\")",
            "name": "comment.line"
        },
        {
            "match": "^\\s*(@.*)",
            "captures": {
                "1": {
                    "name": "keyword.control"
                }
            }
        },
        {
            "match": "(?i)^\\s*(Feature|Background|Rule|Scenario|Scenario Outline|Scenario Template):(.*)",
            "captures": {
                "1": {
                    "name": "markup.bold"
                },
                "2": {
                    "name": "string"
                }
            }
        },
        {
            "match": "(?i)^\\s*(Given|When|Then|And|But)(?:\\:)?(.*)",
            "captures": {
                "1": {
                    "name": "keyword"
                },
                "2": {
                    "name": "variable"
                }
            }
        },
        {
            "match": "(?i)^\\s*(Examples?):(.*)",
            "captures": {
                "1": {
                    "name": "support.type"
                },
                "2": {
                    "name": "constant.numeric"
                }
            }
        },
        {
            "match": "\\|",
            "name": "support.type"
        }
    ]
}