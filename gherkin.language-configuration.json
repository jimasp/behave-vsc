{
    "comments": {
        "lineComment": "#",
    },
    "wordPattern": "[^\\s]", // this determines how autocomplete is triggered, e.g. test with quotes like: 'And "we" have'
    "onEnterRules": [
        // https://code.visualstudio.com/api/language-extensions/language-configuration-guide#on-enter-rules
        {
            "beforeText": "^\\s+$",
            "previousLineText": "^(?!\\s*Feature:).*$", // (does not match)
            "action": {
                "indent": "outdent"
            }
        },
        {
            "beforeText": "^\\s*(Feature:|Background:|Rule:|Scenario:|Scenario Outline:|Scenario Template:|Examples:).*",
            "action": {
                "indent": "indent"
            }
        },
    ],
}